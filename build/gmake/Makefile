# GNU Make solution makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  ecstasy_config = debug
  tests_config = debug
endif
ifeq ($(config),release)
  ecstasy_config = release
  tests_config = release
endif

PROJECTS := ecstasy tests

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

ecstasy:
ifneq (,$(ecstasy_config))
	@echo "==== Building ecstasy ($(ecstasy_config)) ===="
	@${MAKE} --no-print-directory -C . -f ecstasy.make config=$(ecstasy_config)
endif

tests:
ifneq (,$(tests_config))
	@echo "==== Building tests ($(tests_config)) ===="
	@${MAKE} --no-print-directory -C . -f tests.make config=$(tests_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f ecstasy.make clean
	@${MAKE} --no-print-directory -C . -f tests.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ecstasy"
	@echo "   tests"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
